<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/real"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableRow android:orientation="vertical">

                <Button
                    android:id="@+id/bclr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="AC"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/bac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="C"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/bper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="%"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/b7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="7"
                    android:textSize="24dp"/>


                <Button
                    android:id="@+id/b8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="8"
                    android:textSize="24dp"/>


                <Button
                    android:id="@+id/b9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="9"
                    android:textSize="24dp"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="4"
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="5"
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="6"
                    android:textSize="24dp"/>


            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="1"
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="2"
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="3"
                    android:textSize="24dp"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/bdot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="."
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="0"
                    android:textSize="24dp"/>

                <Button
                    android:id="@+id/beq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_animator"
                    android:text="="
                    android:textSize="24dp"/>
            </TableRow>
        </TableLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:orientation="vertical">


            <Button
                android:id="@+id/bdiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_animator"
                android:text="รท"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/bmul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_animator"
                android:text="x"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_animator"
                android:text="-"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/badd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_animator"
                android:text="+"
                android:textSize="24dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>